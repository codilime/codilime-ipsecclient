connections {
{{ range $index, $val := .Endpoints }}{{ $i := inc $index }}
    {{ $.Vlan }}_{{ $.ClientName }}_{{ $i }} {
        remote_addrs = {{ $val.RemoteIPSec }}
        local {
            auth = psk
            id = {{ $val.RemoteIPSec }}
        }
        remote {
            auth = psk
            id = {{ $val.RemoteIPSec }}
        }
        children {
            site-cisco_{{ $i }} {
                remote_ts = 0.0.0.0/0
                local_ts = 0.0.0.0/0
                if_id_in = {{ calc $.Vlan $i }}
                if_id_out = {{ calc $.Vlan $i }}
                esp_proposals = {{ $.Crypto2 }}
                start_action = start
            }
        }
        version = 2
        proposals = {{ $.Crypto1 }}
    }
{{ end }}
}
secrets {
{{ range $index, $val := .Endpoints }}{{ $i := inc $index }}
    ike-{{ $.Vlan }}_{{ $.ClientName }}_{{ $i }} {
        id = {{ $val.RemoteIPSec }}
        secret = {{ $val.Authentication.PSK }}
    }
{{ end }}
}
